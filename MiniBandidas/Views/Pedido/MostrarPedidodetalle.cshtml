
@{
    ViewBag.Title = "MostrarPedidodetalle";
}

<h2>MostrarPedidodetalle</h2>

<div class="table-responsive">
    <table class="table table-hover">
        <tbody>
            <tr>
                <th># Pedido</th>
                <th>Subtotal</th>
                <th>Total</th>
                <th>Detalle</th>
            </tr>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.numPedido</td>
                    <td>@pedido.subtotal</td>
                    <td>@pedido.total</td>
                    <td>@pedido.Detalles</td>
                </tr>
            }
        </tbody>
    </table>
    @using (Html.BeginForm("Crear_registro", "Pedido", FormMethod.Post, new { role = "form", @class = "" }))
    {
        <input type="submit" class="btn btn-primary" value="Crear Registro" />
    }

</div>