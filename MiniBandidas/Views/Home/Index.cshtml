@{
    ViewBag.Title = "Mini Bandidas";
}

<!DOCTYPE html>
<html>
<head>
    <title>Mini Bandidas</title>
    <style>
        h1 {
            color: fuchsia;
        }

        table {
            border-collapse: collapse;
            text-align: center;
        }

            table.center {
                margin-left: auto;
                margin-right: auto;
            }

        .espaciado-horizontal {
            margin-left: 20px;
            margin-right: 20px; /* Agrega espacio horizontalmente */
        }

        body {
            background-color: lavender;
            text-align: center;
        }

        .col-md-12 {
            text-align: center;
        }

        .btn-purple {
            background-color: purple;
            color: white;
            margin: 10px;
            text-align: center;
        }
    </style>
    <link rel="stylesheet" href="ruta/a/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Bienvenido a MiniBandidas</h1>
            </div>
        </div>
        <div class="row button-container">
            <div class="col-md-12">
                @if (Session["LoggedIn"] == null)
                {
                    <input type="button" class="btn btn-purple" value="Registrarse" onclick="document.location.href = '@Url.Content("~/Usuario/Registrarse/~")'" />
                    <input type="button" id="loguearse" class="btn btn-purple" value="Iniciar Sesión" onclick="document.location.href = '@Url.Content("~/Login/Index/~")'" />
                }
            </div>
            <div>
                &nbsp;
                <table class="center">
                    <tr>
                        <th>
                            <img src="~/Imagenes/brocheta.png.png" width="200" height="200" />
                        </th>
                        <th>
                            <img src="~/Imagenes/individuales.png" width="200" height="200" />
                        </th>
                        <th>
                            <img src="~/Imagenes/caja4.png" width="200" height="200" />
                        </th>
                </table>

            </div>
        </div>
    </div>
    <script src="ruta/a/jquery.min.js"></script>
    <script src="ruta/a/bootstrap.min.js"></script>
</body>
</html>